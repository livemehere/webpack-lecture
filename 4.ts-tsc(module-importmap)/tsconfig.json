{
  "compilerOptions": {
    "target": "ESNext", // ES5 or ESNext
    "module": "ESNext", // CommonJS or ESNext
    "moduleResolution": "node", // node 로 해야 node_modules 을 탐색합니다.
    "inlineSourceMap": true,
    "outDir": "dist",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "."
  }
}